	<ShortName>
		<en>Demo Facebook</en>
		<nl>Demo Facebook</nl>
	</ShortName>
	<SchemeManager>irma-demo</SchemeManager>
	<IssuerID>pbdf</IssuerID>
	<CredentialID>facebook</CredentialID>
	<Description>
		<en>Facebook attributes obtained using Facebook Connect</en>
		<nl>Facebook-attributen verkregen via Facebook Connect</nl>
	</Description>
	<ShouldBeSingleton>false</ShouldBeSingleton>
	<IssueURL>
		<en>https://privacybydesign.foundation/attribute-index/en/irma-demo.pbdf.facebook.html</en>
		<nl>https://privacybydesign.foundation/attribute-index/nl/irma-demo.pbdf.facebook.html</nl>
